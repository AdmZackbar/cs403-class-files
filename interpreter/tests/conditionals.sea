class Conditional
{
    function condReturn(x)
    {
        if (x)
        {
            return 100;
        }
        return 30;
    }
    
    function altWhile(len)
    {
        var i = 0;
        while (true)
        {
            if (i >= len)
            {
                return i;
            }
            i = i + 3;
        }
        return "unreachable";
    }
}

main()
{
    println("1 < 2: ", 1<2);
    println("2 < 2: ", 2<2);
    println("0 && 1: ", 0 && 1);
    println("0 || 1: ", 0 || 1);
    println("0 || 0: ", 0 || 0);
    println("1 && 4: ", 1 && 4);
    
    var test = Conditional();
    
    println(test.condReturn(true), " ", test.condReturn(false));
    println(test.altWhile(10));
    
    while (true)
    {
        println("breaking out of infinite loop");
        return 0;
    }
}
